# Makefile template for shared library

INCPATH = -I includes/

CC = arm-linux-gnueabihf-g++-4.8
CXX = arm-linux-gnueabihf-g++-4.8
CFLAGS = -std=c++0x -fPIC -Wall -Wno-unknown-pragmas -Wno-unused-parameter -Wextra -O2 -c -pthread $(INCPATH)
CXXFLAGS = -std=c++0x -fPIC -Wall -Wno-unknown-pragmas -Wno-unused-parameter -Wextra -O2 -c -pthread $(INCPATH)
LDFLAGS = -shared -pthread -static-libgcc -static-libstdc++ -ldl

LIBSDEF = libs/linux_ARMV7/raumkernel.so

RM = rm -f 
TARGET_LIB = libs/linux_ARMV7/raumserver.so

SRCS = $(wildcard *.cpp)
SRCS += $(wildcard json/*.cpp)
SRCS += $(wildcard manager/*.cpp)
SRCS += $(wildcard request/*.cpp)
SRCS += $(wildcard webserver/*.cpp)
SRCS += $(wildcard webserver/civetweb/*.cpp)
SRCS += $(wildcard webserver/civetweb/*.c)

OBJS = $(SRCS:.cpp=.o)

#.PHONY: test
#test: $(SRCS)
#	$(CC) -o $(TARGET_LIB) $(SRCS) -shared -fPIC -Wall -Wextra -O2


.PHONY: all
all: ${TARGET_LIB}

$(TARGET_LIB): $(OBJS)
	$(CC) ${LDFLAGS} -o $@ $^ $(LIBSDEF)

$(SRCS:.cpp=.d):%.d:%.cpp
	$(CC) $(CFLAGS) -MM $< >$@

include $(SRCS:.cpp=.d)


.PHONY: clean
clean:
	-${RM} ${OBJS} $(SRCS:.cpp=.d) 